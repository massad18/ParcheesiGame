<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/top_gui_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.keokimassad.testparcheesi.ParSurfaceView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/surfaceView"
            android:layout_weight="1" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/navyblue">

            <Space
                android:layout_width="match_parent"
                android:layout_height="39dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="Player Turn: "
                    android:id="@+id/playerTurnText"
                    android:textSize="20dp"
                    android:layout_weight="10"/>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="Current Substage: "
                    android:id="@+id/currentSubstageText"
                    android:textSize="20dp"
                    android:layout_weight="10"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/die1"
                    android:background="@drawable/die1"
                    android:layout_weight="2"/>

                <Space
                    android:layout_width="78dp"
                    android:layout_height="fill_parent" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/die2"
                    android:background="@drawable/die2"
                    android:layout_weight="2"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <RadioGroup
                    android:id="@+id/selectPawn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <RadioButton
                        android:id="@+id/radioPawn1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Move Pawn 1"
                        android:textSize="18dp"/>
                    <RadioButton
                        android:id="@+id/radioPawn2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Move Pawn 2"
                        android:textSize="18dp"/>
                    <RadioButton
                        android:id="@+id/radioPawn3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Move Pawn 3"
                        android:textSize="18dp"/>
                    <RadioButton
                        android:id="@+id/radioPawn4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Move Pawn 4"
                        android:textSize="18dp"/>

                </RadioGroup>

                <!--<Button-->
                    <!--android:text="Pawn 1"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:id="@+id/pawn1"-->
                    <!--android:layout_weight="2"/>-->
                <!--<Button-->
                    <!--android:text="Pawn 2"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:id="@+id/pawn2"-->
                    <!--android:layout_weight="2"/>-->
                <!--<Button-->
                    <!--android:text="Pawn 3"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:id="@+id/pawn3"-->
                    <!--android:layout_weight="2"/>-->
                <!--<Button-->
                    <!--android:text="Pawn 4"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:id="@+id/pawn4"-->
                    <!--android:layout_weight="2"/>-->

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <Button
                    android:text="Use die 1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/useDie1"
                    android:layout_weight="2"/>
                <Button
                    android:text="Use die 2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/useDie2"
                    android:layout_weight="2"/>
                <Button
                    android:text="Use both dice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/useBothDice"
                    android:layout_weight="2"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="81dp">

                <Button
                    android:text="Confirm Move"
                    android:layout_width="wrap_content"
                    android:layout_height="72dp"
                    android:id="@+id/makeMoveButton"
                    android:layout_weight="2"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>